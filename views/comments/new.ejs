<%- include("../partials/header.ejs") %> 

	<div class="row">
		<h1 style="text-align: center;">Add New Comment <%= campground.name %> </h1>
		<div style="width: 30%;margin: 30px auto;">
			<form action="/campgrounds/<%= campground._id %>/comments " method="post">
				<div class="form-group">
					<input class="form-control" type="text" name="comment[text]" placeholder="text">
				</div>
				<div class="form-group">
						<button class="btn btn-lg btn-default btn-block btn-primary" type="submit">Submit</button>
				</div>
			</form>
			<a href="/campgrounds">Go back</a>
		</div>
	</div>

